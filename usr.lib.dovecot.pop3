#include <tunables/global>
/usr/lib/dovecot/pop3 {
  #include <abstractions/base>
  #include <abstractions/nameservice>

  capability setgid,
  capability setuid,

  /var/mail/* klrw,
  /home/*/ r,
  /home/*/mail/* klrw,
  /home/*/mail/.imap/** klrw,
  /home/*/Maildir/ rw,
  /home/*/Maildir/** klrw,
  /usr/lib/dovecot/pop3 mr,
}
