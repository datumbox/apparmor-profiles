#include <tunables/global>
/usr/lib/dovecot/pop3 {
  #include <abstractions/base>
  #include <abstractions/nameservice>

  capability setgid,
  capability setuid,

  /var/mail/* klrw,
  @{HOME} r,
  @{HOME}/mail/* klrw,
  @{HOME}/mail/.imap/** klrw,
  @{HOME}/Maildir/ rw,
  @{HOME}/Maildir/** klrw,
  /usr/lib/dovecot/pop3 mr,
}
